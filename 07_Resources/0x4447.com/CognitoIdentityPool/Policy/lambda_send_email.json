{
	"CognitoIdentityPoolPolicyLCF": {
		"Type": "AWS::IAM::Policy",
		"Properties": {
			"PolicyName": "lambda_send_email",
			"Roles": [ { "Ref": "CognitoIDPUnauthenticatedRole" } ],
			"PolicyDocument": {
				"Version": "2012-10-17",
				"Statement": [
					{
						"Effect": "Allow",
						"Action": [
							"dynamodb:InvockeFunction"
						],
						"Resource": { "Fn::Sub": "arn:aws:lambda:${AWS::Region}:${AWS::AccountId}:function/${LambdaSendEmail}" }
					}
				]
			}
		}
	}
}
